<h1>Starter Blog</h1>

<% @posts.each do |post|  %>
  <h2><%= link_to post.title, post %></h2>
    <p><%= post.content %></p>
    <p>
      <%= link_to "Düzenle", edit_post_path(post) %>
      <%= link_to "Sil", post, :confirm => "Emin misiniz?", :method => :delete %>
    </p>
    <hr/>
<% end %>
<p><%= link_to "Yeni Gönderi", new_post_path %></p>
