<h1>Starter Blog</h1>
<% if current_user %>
<p><%= link_to "Yeni Makale", new_post_path %></p>
<% end %>
<% @posts.each do |post|  %>

        <h2><%= link_to post.title, post %></h2>
        <p><%= post.content %></p>
        <p>Gönderen :  <%= post.postUser %></p>
    <% if current_user %>
        <% if post.postUser == current_user.username %>
        <p>
        <%= link_to "Düzenle", edit_post_path(post) %>
        <%= link_to "Sil", post, :confirm => "Emin misiniz?", :method => :delete %>
        </p>
        <% end %>
    <% end %>
    <hr/>
<% end %>
<% if current_user %>
<p><%= link_to "Yeni Makale", new_post_path %></p>
<% end %>
